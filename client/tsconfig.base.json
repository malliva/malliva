      ],
      "@client/market-app/item-details": [
        "libs/market-app/item-details/src/index.ts"
      ],
      "@client/shared/account-syn-api": [
        "libs/shared/account-syn-api/src/index.ts"
      ],
      "@client/shared/auth-guard": ["libs/shared/auth-guard/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
